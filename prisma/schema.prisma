generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

/**
 * NextAuth models (Prisma Adapter compatible)
 */
model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?

  accounts Account[]
  sessions Session[]

  // Mini Jira relations
  createdProjects Project[]       @relation("ProjectCreator")
  reportedIssues  Issue[]         @relation("IssueReporter")
  assignedIssues  Issue[]         @relation("IssueAssignee")
  comments        Comment[]
  memberships     ProjectMember[]

  // Activity relations
  activities Activity[] @relation("ActivityActor")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/**
 * Mini Jira models
 */
enum ProjectRole {
  ADMIN
  MEMBER
}

enum IssueStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

enum IssueType {
  TASK
  BUG
  STORY
}

enum IssuePriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum SprintStatus {
  PLANNED
  ACTIVE
  CLOSED
}

model Project {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  key         String  @unique // e.g. "MJ"
  description String?

  createdById String @db.ObjectId
  createdBy   User   @relation("ProjectCreator", fields: [createdById], references: [id])

  members    ProjectMember[]
  issues     Issue[]
  sprints    Sprint[]
  activities Activity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectMember {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  projectId String      @db.ObjectId
  userId    String      @db.ObjectId
  role      ProjectRole @default(MEMBER)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
}

model Sprint {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  projectId String       @db.ObjectId
  name      String
  status    SprintStatus @default(PLANNED)
  startDate DateTime?
  endDate   DateTime?

  project    Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues     Issue[]
  activities Activity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Issue {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  projectId   String        @db.ObjectId
  title       String
  description String?
  status      IssueStatus   @default(TODO)
  type        IssueType     @default(TASK)
  priority    IssuePriority @default(MEDIUM)
  storyPoints Int?

  reporterId String @db.ObjectId
  reporter   User   @relation("IssueReporter", fields: [reporterId], references: [id])

  assigneeId String? @db.ObjectId
  assignee   User?   @relation("IssueAssignee", fields: [assigneeId], references: [id])

  sprintId String? @db.ObjectId
  sprint   Sprint? @relation(fields: [sprintId], references: [id])

  project    Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  comments   Comment[]
  activities Activity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  issueId  String @db.ObjectId
  authorId String @db.ObjectId
  body     String

  issue  Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  author User  @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ActivityType {
  ISSUE_CREATED
  ISSUE_STATUS_CHANGED
  ISSUE_ASSIGNEE_CHANGED
  ISSUE_COMMENT_ADDED
  ISSUE_SPRINT_CHANGED
  SPRINT_STATUS_CHANGED
}

model Activity {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  projectId String       @db.ObjectId
  actorId   String       @db.ObjectId
  type      ActivityType

  issueId  String? @db.ObjectId
  sprintId String? @db.ObjectId

  meta      Json?
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  actor   User    @relation("ActivityActor", fields: [actorId], references: [id])
  issue   Issue?  @relation(fields: [issueId], references: [id])
  sprint  Sprint? @relation(fields: [sprintId], references: [id])
}
